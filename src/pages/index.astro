---
// src/pages/index.astro
import MainLayout from "../layouts/MainLayout.astro";
// Import the newly created components
import PortfolioCard from "../components/PortfolioCard.astro";
import SkillTag from "../components/SkillTag.astro";

// --- Data Definitions ---
// (Keep data here for the page to manage and pass down)

// Define portfolio items data
const portfolioItems = [
  {
    title: "ROQS",
    description:
      "Restaurant Ordering and Queuing System - a web app that streamlines restaurant operations with tools for orders, queues, tables, inventory, and staff management.",
    imageUrl: "/images/roqs.png", // Darker Indigo
    link: "https://github.com/victorjosefcaro/ROQS",
    skills: ["SQL", "PHP", "HTML", "CSS", "Bootstrap", "VS Code"],
  },
  {
    title: "numerical-analysis-toolkit",
    description:
      "A toolkit offering interactive tools and resources for interpolation, integration, root-finding, and error analysis methods.",
    imageUrl: "/images/numerical-analysis-toolkit.png", // Pink
    link: "https://github.com/victorjosefcaro/numerical-analysis-toolkit",
    skills: ["Java", "Python", "C#", "NetBeans", "VS Code", "Visual Studio"],
  },
  {
    title: "nurturing-love",
    description:
      "A visual novel made using Ren'Py, it uses data structures and algorithms to create a branching narrative.",
    imageUrl: "/images/nurturing-love.png",
    link: "https://github.com/victorjosefcaro/nurturing-love",
    skills: ["Python", "VS Code"],
  },
  {
    title: "PlantCycleExplorer",
    description:
      "An educational app teaching plant life cycles through interactive lessons, quizzes, and visual aids.",
    imageUrl: "/images/PlantCycleExplorer.png",
    link: "https://github.com/victorjosefcaro/PlantCycleExplorer",
    skills: ["C#", "Visual Studio"],
  },
];

// Define skills data, categorized
const skillCategories = [
  {
    title: "Programming Languages",
    bgColor: "bg-blue-100 dark:bg-blue-900",
    textColor: "text-blue-800 dark:text-blue-200",
    skills: [
      { name: "Java", icon: "fas fa-mug-hot" },
      { name: "Python", icon: "fab fa-python" },
      { name: "C#", icon: "fab fa-hashtag" },
      { name: "SQL", icon: "fas fa-database" },
      { name: "PHP", icon: "fas fa-server" },
      { name: "JavaScript", icon: "fab fa-js" },
    ],
  },
  {
    title: "Web Development",
    bgColor: "bg-green-100 dark:bg-green-900",
    textColor: "text-green-800 dark:text-green-200",
    skills: [
      { name: "HTML", icon: "fab fa-html5" },
      { name: "CSS", icon: "fab fa-css3-alt" },
      { name: "Bootstrap", icon: "fab fa-bootstrap" },
      { name: "Laravel", icon: "fas fa-cubes" },
      { name: "Astro", icon: "fas fa-rocket" },
      { name: "Tailwind CSS", icon: "fas fa-wind" },
    ],
  },
  {
    title: "Tools & Platforms",
    bgColor: "bg-orange-100 dark:bg-orange-900",
    textColor: "text-orange-800 dark:text-orange-200",
    skills: [
      { name: "VS Code", icon: "fas fa-code" },
      { name: "NetBeans", icon: "fas fa-cube" },
      { name: "Git", icon: "fab fa-git-alt" },
      { name: "GitHub", icon: "fab fa-github" },
      { name: "Figma", icon: "fas fa-pen" },
      { name: "Canva", icon: "fas fa-palette" },
    ],
  },
  {
    title: "Machine Learning & Data Science",
    bgColor: "bg-purple-100 dark:bg-purple-900",
    textColor: "text-purple-800 dark:text-purple-200",
    skills: [
      { name: "PyTorch", icon: "fas fa-fire" },
      { name: "RapidMiner", icon: "fas fa-bolt" },
      { name: "Power BI", icon: "fas fa-chart-line" },
    ],
  },
];

// Pass the desired title to the layout
const pageTitle = "Victor Caro | Portfolio";
---

<MainLayout title={pageTitle}>
  <div>
    {/* --- Hero Banner Section --- */}
    <section id="about" class="mb-8 sm:mb-12 md:mb-16 lg:mb-20">
      {/* Hero Banner Container */}
      <div
        class="bg-gradient-to-r from-indigo-200 via-purple-200 to-pink-200 dark:from-indigo-950 dark:via-purple-950 dark:to-pink-950 px-4 sm:px-8 md:px-16 lg:px-32 py-16 sm:py-24 md:py-40 shadow-lg flex flex-col md:flex-row items-center gap-8 md:gap-12"
      >
        {/* Text Content */}
        <div class="w-full md:w-2/3 text-center md:text-left">
          <h2
            class="text-6xl sm:text-4xl md:text-5xl lg:text-8xl font-bold text-gray-900 dark:text-white mb-4 leading-tight pt-8"
          >
            Hi, I'm <span class="text-indigo-600 dark:text-indigo-300"
              >Victor</span
            >
          </h2>
          <p
            class="text-xl sm:text-xl md:text-4xl text-gray-700 dark:text-gray-200 mb-6 leading-relaxed"
          >
            A 4th-year Computer Science student ready to build amazing things.
          </p>
          <p
            class="text-md sm:text-md md:text-2xl text-gray-600 dark:text-gray-300 mb-8"
          >
            Passionate about programming, problem-solving, and eager to
            contribute to innovative projects.
          </p>
          <a
            href="#contact"
            class="inline-block bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white font-bold py-3 px-6 rounded-lg shadow-md transition duration-300"
          >
            Get In Touch
          </a>
        </div>

        {/* Image Content */}
        <div
          class="w-full md:w-1/3 flex justify-center md:justify-end mt-8 md:mt-0"
        >
          <img
            src="/images/Victor.png"
            alt="Victor Caro Profile Picture"
            class="rounded-full w-40 h-40 sm:w-56 sm:h-56 md:w-80 md:h-80 lg:w-90 lg:h-90 object-cover shadow-xl"
            onerror="this.onerror=null; this.src='https://placehold.co/384x384/E0E7FF/4F46E5?text=Error';"
            loading="lazy"
          />
        </div>
      </div>
    </section>

    {/* --- Portfolio Section (Using Component) --- */}
    <section
      id="portfolio"
      class="scroll-mt-24 mb-8 sm:mb-12 md:mb-16 lg:mb-20 pt-5 px-4 sm:px-8 md:mx-28"
    >
      <h2
        class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-6 border-b border-gray-300 dark:border-gray-700 pb-2"
      >
        <span class="mr-2">üíº</span>Portfolio
      </h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {/* Map over portfolioItems array and render PortfolioCard component */}
        {
          portfolioItems.map((item) => (
            <PortfolioCard
              title={item.title}
              description={item.description}
              imageUrl={item.imageUrl}
              link={item.link}
              skills={item.skills}
            />
          ))
        }
      </div>
    </section>

    {/* --- Skills Section (Using Component) --- */}
    <section
      id="skills"
      class="scroll-mt-24 mb-8 sm:mb-12 md:mb-16 lg:mb-20 pt-5 px-4 sm:px-8 md:mx-28"
    >
      <h2
        class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-6 border-b border-gray-300 dark:border-gray-700 pb-2"
      >
        <span class="mr-2">üõ†Ô∏è</span>Skills
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
        {/* Map over skillCategories array */}
        {
          skillCategories.map((category) => (
            <div>
              <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200 mb-3">
                {category.title}
              </h3>
              <div class="flex flex-wrap gap-3">
                {/* Map over skills and render SkillTag component */}
                {category.skills.map((skill) => (
                  <SkillTag
                    name={skill.name}
                    icon={skill.icon}
                    bgColor={category.bgColor}
                    textColor={category.textColor}
                  />
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </section>

    {/* --- Education Section --- */}
    <section
      id="education"
      class="scroll-mt-24 mb-8 sm:mb-12 md:mb-16 lg:mb-20 pt-5 px-4 sm:px-8 md:mx-28"
    >
      <h2
        class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-6 border-b border-gray-300 dark:border-gray-700 pb-2"
      >
        <span class="mr-2">üéì</span>Education
      </h2>
      <div class="space-y-6">
        <div class="bg-white dark:bg-gray-800 p-5 rounded-lg shadow-md">
          <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200">
            Bachelor of Science In Computer Science
          </h3>
          <p class="text-md text-gray-700 dark:text-gray-300 font-medium">
            Adamson University
          </p>
          <p class="text-sm text-gray-500 dark:text-gray-400">2021 - 2025</p>
        </div>
      </div>
    </section>

    {/* --- Contact Section --- */}
    <section
      id="contact"
      class="scroll-mt-24 mb-8 sm:mb-12 md:mb-16 lg:mb-20 pt-5 px-4 sm:px-8 md:mx-28"
    >
      <h2
        class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-6 border-b border-gray-300 dark:border-gray-700 pb-2"
      >
        <span class="mr-2">‚úâÔ∏è</span>Contact
      </h2>
      <p class="mb-6 text-gray-700 dark:text-gray-300">
        Have a question or want to work together? Feel free to reach out using
        the form below or via email. I'm always open to discussing new projects
        or opportunities.
      </p>
      <div class="bg-white dark:bg-gray-800 p-4 sm:p-6 rounded-lg shadow-md">
        <form id="contact-form" action="#" method="POST">
          <div class="mb-4">
            <label
              for="name"
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
              >Name</label
            >
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-3 py-2 border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 transition duration-150"
              placeholder="Your Name"
            />
          </div>
          <div class="mb-4">
            <label
              for="email"
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
              >Email</label
            >
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-3 py-2 border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 transition duration-150"
              placeholder="your.email@example.com"
            />
          </div>
          <div class="mb-4">
            <label
              for="message"
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
              >Message</label
            >
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full px-3 py-2 border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 transition duration-150"
              placeholder="Your message..."></textarea>
          </div>
          <div>
            <button
              type="submit"
              class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-150 disabled:opacity-50 w-full sm:w-auto"
            >
              Send Message
            </button>
          </div>
          <p id="form-status" class="mt-4 text-sm font-semibold transition-all">
          </p>
        </form>
        <script is:inline>
          const form = document.getElementById("contact-form");
          const status = document.getElementById("form-status");
          function setStatus(message, type) {
            status.textContent = message;
            status.className =
              "mt-4 text-sm font-semibold transition-all px-4 py-2 rounded " +
              (type === "success"
                ? "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200 border border-green-300 dark:border-green-700 shadow"
                : type === "error"
                  ? "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200 border border-red-300 dark:border-red-700 shadow"
                  : "bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-200 border border-indigo-300 dark:border-indigo-700 shadow");
          }
          form.addEventListener("submit", async (e) => {
            e.preventDefault();
            setStatus("Sending...", "info");
            const name = form.name.value;
            const email = form.email.value;
            const message = form.message.value;
            try {
              const res = await fetch("/api/contact", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ name, email, message }),
              });
              if (res.ok) {
                setStatus("Message sent successfully!", "success");
                form.reset();
                setTimeout(() => {
                  status.textContent = "";
                  status.className =
                    "mt-4 text-sm font-semibold transition-all";
                }, 4000);
              } else {
                setStatus(
                  "Failed to send message. Please try again later.",
                  "error",
                );
              }
            } catch (err) {
              setStatus(
                "Error sending message. Please try again later.",
                "error",
              );
            }
          });
        </script>
        <p class="mt-6 text-sm text-gray-600 dark:text-gray-400 break-words">
          Alternatively, you can email me directly at: <a
            href="mailto:victorjosefcaro@gmail.com"
            class="text-indigo-600 dark:text-indigo-400 hover:underline"
            >victorjosefcaro@gmail.com</a
          >
        </p>
      </div>
    </section>
  </div>
</MainLayout>

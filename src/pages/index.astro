    bgColor: "bg-purple-100 dark:bg-purple-900",
    textColor: "text-purple-800 dark:text-purple-200",
    skills: [
      { name: "Power BI", icon: "fas fa-chart-bar" },
      { name: "scikit-learn", icon: "fas fa-chart-line" },
      { name: "PyTorch", icon: "fas fa-fire" },
      { name: "RapidMiner", icon: "fas fa-bolt" },
    ],
  },
];

// Updated blog posts data to match the style of the provided image
const blogPosts = [
  {
    title: "Mastering Paddle: Crafting a Payment Link Page with an ADR",
    imageUrl: "/images/paddle.webp",
    date: "Feb 19, 2025",
    content:
      "A deep dive into creating a payment link page using Paddle's API, focusing on the architecture and design decisions.",
  },
  {
    title: "Whitelisting with Rust: Diving Deep into Language Detection",
    imageUrl: "/images/rust.webp",
    date: "Mar 6, 2025",
    content:
      "Exploring the intricacies of language detection using Rust, with a focus on performance and accuracy.",
  },
  {
    title: "Testing Slack Bots: My SeleniumBase Automation Adventure",
    imageUrl: "/images/seleniumbase.webp",
    date: "Mar 21, 2025",
    content:
      "A comprehensive guide on using SeleniumBase to automate testing for Slack bots, ensuring reliability and performance.",
  },
  {
    title: "UI/UX Workshop Highlights: A Personal Reflection",
    imageUrl: "/images/uiux.webp",
    date: "Mar 24, 2025",
    content:
      "Reflecting on the key takeaways from a recent UI/UX workshop, focusing on design principles and user-centered design.",
  },
  {
    title: "How Astro and Tailwind Shaped My Personal Web Portfolio",
    imageUrl: "/images/astro.webp",
    date: "May 3, 2020",
    content:
      "A personal journey of building a web portfolio using Astro and Tailwind CSS, highlighting the benefits of these technologies.",
  },
];

// Pass the desired title to the layout
const pageTitle = "Victor Caro | Portfolio";
---

<MainLayout title={pageTitle}>
  <div>
    {/* --- Hero Banner Section --- */}
    <section id="about" class="mb-8 sm:mb-12 md:mb-16 lg:mb-20">
      {/* Hero Banner Container */}
      <div
        class="bg-gradient-to-r from-indigo-200 via-purple-200 to-pink-200 dark:from-indigo-950 dark:via-purple-950 dark:to-pink-950 px-4 sm:px-8 md:px-16 lg:px-32 py-16 sm:py-24 md:py-40 shadow-lg flex flex-col md:flex-row items-center gap-8 md:gap-12"
      >
        {/* Text Content */}
        <div class="w-full md:w-2/3 text-center md:text-left">
          <h2
            class="text-4xl sm:text-5xl md:text-6xl lg:text-8xl font-bold text-gray-900 dark:text-white mb-4 leading-tight pt-8"
          >
            Hi, I'm <span class="text-indigo-600 dark:text-indigo-300"
              >Victor</span
            >
          </h2>
          <p
            class="text-lg sm:text-xl md:text-2xl lg:text-4xl text-gray-700 dark:text-gray-200 mb-6 leading-relaxed"
          >
            A 4th-year Computer Science student ready to build amazing things.
          </p>
          <p
            class="text-base sm:text-md md:text-lg lg:text-2xl text-gray-600 dark:text-gray-300 mb-8"
          >
            Passionate about programming, problem-solving, and eager to
            contribute to innovative projects.
          </p>
          <a
            href="#contact"
            class="inline-block bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-700 dark:hover:bg-indigo-600 text-white font-bold py-3 px-6 rounded-lg shadow-md transition duration-300 text-sm sm:text-base"
          >
            Get In Touch
          </a>
        </div>

        {/* Image Content */}
        <div
          class="w-full md:w-1/3 flex justify-center md:justify-end mt-8 md:mt-0"
        >
          <img
            src="/images/Victor.webp"
            alt="Victor Caro Profile Picture"
            class="rounded-full w-40 h-40 sm:w-56 sm:h-56 md:w-72 md:h-72 lg:w-80 lg:h-80 object-cover shadow-xl"
            onerror="this.onerror=null; this.src='https://placehold.co/320x320/E0E7FF/4F46E5?text=Victor';"
          />
        </div>
      </div>
    </section>

    {/* --- Portfolio Section (Using Component) --- */}
    <section
      id="portfolio"
      class="scroll-mt-24 mb-8 sm:mb-12 md:mb-16 lg:mb-20 pt-5 px-4 sm:px-8 md:mx-16 lg:mx-28 overflow-auto"
    >
      <h2
        class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-6 border-b border-gray-300 dark:border-gray-700 pb-2"
      >
        <span class="mr-2">üíº</span>Portfolio
      </h2>
      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8"
      >
        {
          portfolioItems.map((item) => (
            <PortfolioCard
              title={item.title}
              description={item.description}
              imageUrl={item.imageUrl}
              link={item.link}
              skills={item.skills}
            />
          ))
        }
      </div>
    </section>

    {/* --- Skills Section (Using Component) --- */}
    <section
      id="skills"
      class="scroll-mt-24 mb-8 sm:mb-12 md:mb-16 lg:mb-20 pt-5 px-4 sm:px-8 md:mx-16 lg:mx-28"
    >
      <h2
        class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-6 border-b border-gray-300 dark:border-gray-700 pb-2"
      >
        <span class="mr-2">üõ†Ô∏è</span>Skills
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
        {
          skillCategories.map((category) => (
            <div>
              <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200 mb-3">
                {category.title}
              </h3>
              <div class="flex flex-wrap gap-3">
                {category.skills.map((skill) => (
                  <SkillTag
                    name={skill.name}
                    icon={skill.icon}
                    bgColor={category.bgColor}
                    textColor={category.textColor}
                  />
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </section>

    {/* --- Blog Section --- */}
    <section
      id="blog"
      class="scroll-mt-24 mb-8 sm:mb-12 md:mb-16 lg:mb-20 pt-5 px-4 sm:px-8 md:mx-16 lg:mx-28"
    >
      <h2
        class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-8 border-b border-gray-300 dark:border-gray-700 pb-2"
      >
        <span class="mr-2">üì∞</span>Blog
      </h2>
      <h1
        class="text-2xl sm:3xl text-gray-900 dark:text-white mb-8 pb-2 text-center"
      >
        My Internship Experience at <span class="font-bold"
          >OTis Philippines Inc.</span
        >
      </h1>

      <div
        class="overflow-x-auto scrollbar-thin scrollbar-track-gray-200 dark:scrollbar-track-gray-800 scrollbar-thumb-gray-400 dark:scrollbar-thumb-gray-600 pb-8"
      >
        <div
          class="flex space-x-6 md:space-x-8 lg:space-x-10 min-w-max overflow"
        >
          {/* Map over blogPosts array and render BlogPostCard component */}
          {
            blogPosts.map((post) => (
              <BlogPostCard
                title={post.title}
                imageUrl={post.imageUrl}
                date={post.date}
              />
            ))
          }
        </div>
      </div>
    </section>

    {/* --- Education Section --- */}
    <section
      id="education"
      class="scroll-mt-24 mb-8 sm:mb-12 md:mb-16 lg:mb-20 pt-5 px-4 sm:px-8 md:mx-16 lg:mx-28"
    >
      <h2
        class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-6 border-b border-gray-300 dark:border-gray-700 pb-2"
      >
        <span class="mr-2">üéì</span>Education
      </h2>
      <div class="space-y-6">
        <div class="bg-white dark:bg-gray-800 p-5 rounded-lg shadow-md">
          <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200">
            Bachelor of Science In Computer Science
          </h3>
          <p class="text-md text-gray-700 dark:text-gray-300 font-medium">
            Adamson University
          </p>
          <p class="text-sm text-gray-500 dark:text-gray-400">2021 - 2025</p>
        </div>
      </div>
    </section>

    {/* --- Contact Section --- */}
    <section
      id="contact"
      class="scroll-mt-24 mb-8 sm:mb-12 md:mb-16 lg:mb-20 pt-5 px-4 sm:px-8 md:mx-16 lg:mx-28"
    >
      <h2
        class="text-2xl sm:text-3xl font-bold text-gray-900 dark:text-white mb-6 border-b border-gray-300 dark:border-gray-700 pb-2"
      >
        <span class="mr-2">‚úâÔ∏è</span>Contact
      </h2>
      <p class="mb-6 text-gray-700 dark:text-gray-300">
        Have a question or want to work together? Feel free to reach out using
        the form below or via email. I'm always open to discussing new projects
        or opportunities.
      </p>
      <div class="bg-white dark:bg-gray-800 p-4 sm:p-6 rounded-lg shadow-md">
        <form id="contact-form" action="#" method="POST">
          <div class="mb-4">
            <label
              for="name"
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
              >Name</label
            >
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-3 py-2 border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
              placeholder="Your Name"
            />
          </div>
          <div class="mb-4">
            <label
              for="email"
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
              >Email</label
            >
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-3 py-2 border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
              placeholder="your.email@example.com"
            />
          </div>
          <div class="mb-4">
            <label
              for="message"
              class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
              >Message</label
            >
            <textarea
              id="message"
              name="message"
              rows="5"
              required
              class="w-full px-3 py-2 border border-gray-300 dark:border-gray-700 bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"
              placeholder="Your message..."></textarea>
          </div>
          <div>
            <button
              type="submit"
              class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-700 dark:hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 disabled:opacity-50 w-full sm:w-auto"
            >
              Send Message
            </button>
          </div>
          <p id="form-status" class="mt-4 text-sm font-semibold transition-all">
          </p>
        </form>
        <script is:inline>
          const form = document.getElementById("contact-form");
          const status = document.getElementById("form-status");
          function setStatus(message, type) {
            status.textContent = message;
            status.className =
              "mt-4 text-sm font-semibold transition-all px-4 py-2 rounded " +
              (type === "success"
                ? "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200 border border-green-300 dark:border-green-700 shadow"
                : type === "error"
                  ? "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200 border border-red-300 dark:border-red-700 shadow"
                  : "bg-indigo-100 text-indigo-800 dark:bg-indigo-900 dark:text-indigo-200 border border-indigo-300 dark:border-indigo-700 shadow");
          }
          form.addEventListener("submit", async (e) => {
            e.preventDefault();
            setStatus("Sending...", "info");
            const name = form.name.value;
            const email = form.email.value;
            const message = form.message.value;
            try {
              const res = await fetch("/api/contact", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({ name, email, message }),
              });
              if (res.ok) {
                setStatus("Message sent successfully!", "success");
                form.reset();
                setTimeout(() => {
                  status.textContent = "";
                  status.className =
                    "mt-4 text-sm font-semibold transition-all";
                }, 4000);
              } else {
                setStatus(
                  "Failed to send message. Please try again later.",
                  "error",
                );
              }
            } catch (err) {
              setStatus(
                "Error sending message. Please try again later.",
                "error",
              );
            }
          });
        </script>
        <p class="mt-6 text-sm text-gray-600 dark:text-gray-400 break-words">
          Alternatively, you can email me directly at: <a
            href="mailto:victorjosefcaro@gmail.com"
            class="text-indigo-700 dark:text-indigo-300 hover:underline"
            >victorjosefcaro@gmail.com</a
          >
        </p>
      </div>
    </section>
  </div>
</MainLayout>

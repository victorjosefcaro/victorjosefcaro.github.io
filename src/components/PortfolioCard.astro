---
// src/components/PortfolioCard.astro
// Reusable component for displaying a portfolio project card.

// Define the expected properties (props) for this component
export interface Props {
    title: string;
    description: string;
    imageUrl: string;
    link: string;
}

// Destructure the props passed to the component
const { title, description, imageUrl, link } = Astro.props;
---

<div
    class="bg-white rounded-lg shadow-md overflow-hidden group transition hover:shadow-xl h-full flex flex-col"
>
    <img
        src={imageUrl}
        alt={title}
        class="w-full h-48 object-cover"
        onerror="this.onerror=null; this.src='https://placehold.co/600x400/CCCCCC/FFFFFF?text=Image+Error';"
        loading="lazy"
    />
    <div class="p-4 flex flex-col flex-grow">
        <h3 class="text-lg font-semibold text-gray-800 mb-1">
            {title}
        </h3>
        <p class="text-sm text-gray-600 mb-3 flex-grow">
            {description}
        </p>
        <a
            href={link}
            class="text-sm text-indigo-600 hover:text-indigo-800 font-medium mt-auto"
        >
            View Details &rarr;
        </a>
    </div>
</div>

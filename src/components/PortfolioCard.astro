---
// src/components/PortfolioCard.astro
// Reusable component for displaying a portfolio project card.

// Define the expected properties (props) for this component
export interface Props {
    title: string;
    description: string;
    imageUrl: string;
    link: string;
    skills?: string[];
}

// Props passed to the component
const { title, description, imageUrl, link, skills } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md overflow-hidden flex flex-col h-full">
    <img src={imageUrl} alt={title} class="w-full h-48 object-cover" />
    <div class="p-4 flex flex-col flex-1">
        <h3 class="text-lg font-semibold text-gray-800 mb-2">{title}</h3>
        <p class="text-sm text-gray-600 mb-4">{description}</p>
        <div class="flex flex-wrap gap-3 mb-4">
            {
                skills &&
                    skills.map((skill) => (
                        <span class="bg-indigo-100 text-indigo-800 text-xs font-medium px-2 py-1 rounded-full">
                            {skill}
                        </span>
                    ))
            }
        </div>
        <div class="mt-auto pt-2">
            <a
                href={link}
                target="_blank"
                class="block text-sm text-indigo-600 hover:text-indigo-800 font-medium"
            >
                View in GitHub
            </a>
        </div>
    </div>
</div>

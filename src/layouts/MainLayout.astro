---
// src/layouts/MainLayout.astro

// Import global styles if you created a separate CSS file (e.g., src/styles/global.css)
import "../styles/global.css";

// Define props if you want to pass data like title to the layout
export interface Props {
  title?: string; // Optional title prop
}

const { title = "victorjosefcaro" } = Astro.props; // Default title

// Get current year for the footer using JavaScript within Astro's frontmatter
const currentYear = new Date().getFullYear();

// NOTE: This layout assumes you have set up the Astro Tailwind integration.
// The Tailwind CDN script has been removed.
---

<!doctype html>
<html lang="en" class="min-h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />

    <style is:global>
      html {
        scroll-behavior: smooth;
      }
    </style>
  </head>
  <body
    class="bg-gray-100 dark:bg-gray-900 font-['Inter'] text-gray-700 dark:text-gray-200"
  >
    <div class="flex flex-col min-h-screen">
      <header
        class="w-full mt-4 flex justify-center fixed top-0 z-30 bg-transparent"
      >
        <div class="w-full flex justify-center">
          <nav
            class="bg-gray-50 dark:bg-gray-950 shadow-lg rounded-2xl px-2 sm:px-2 py-3 max-w-3xs sm:max-w-xl flex justify-center"
            id="main-nav"
          >
            <ul class="flex flex-wrap gap-1 md:gap-2">
              <li>
                <a
                  href="#about"
                  class="nav-link block py-1 px-4 transition duration-300 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 flex items-center justify-center"
                  data-section="about"
                  id="nav-about"
                >
                  <span class="sm:hidden"><i class="fas fa-user"></i></span>
                  <span class="hidden sm:inline">About</span>
                </a>
              </li>
              <li>
                <a
                  href="#portfolio"
                  class="nav-link block py-1 px-4 transition duration-300 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 flex items-center justify-center"
                  data-section="portfolio"
                  id="nav-portfolio"
                >
                  <span class="sm:hidden"><i class="fas fa-briefcase"></i></span
                  >
                  <span class="hidden sm:inline">Portfolio</span>
                </a>
              </li>
              <li>
                <a
                  href="#skills"
                  class="nav-link block py-1 px-4 transition duration-300 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 flex items-center justify-center"
                  data-section="skills"
                  id="nav-skills"
                >
                  <span class="sm:hidden"><i class="fas fa-tools"></i></span>
                  <span class="hidden sm:inline">Skills</span>
                </a>
              </li>
              <li>
                <a
                  href="#education"
                  class="nav-link block py-1 px-4 transition duration-300 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 flex items-center justify-center"
                  data-section="education"
                  id="nav-education"
                >
                  <span class="sm:hidden"
                    ><i class="fas fa-graduation-cap"></i></span
                  >
                  <span class="hidden sm:inline">Education</span>
                </a>
              </li>
              <li>
                <a
                  href="#contact"
                  class="nav-link block py-1 px-4 transition duration-300 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 flex items-center justify-center"
                  data-section="contact"
                  id="nav-contact"
                >
                  <span class="sm:hidden"><i class="fas fa-envelope"></i></span>
                  <span class="hidden sm:inline">Contact</span>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </header>
      <main class="flex-1 w-full mx-auto">
        <slot />
      </main>
      <footer
        class="py-6 text-xs text-gray-400 dark:text-gray-500 text-center w-full bg-white dark:bg-gray-800 shadow-inner"
      >
        &copy; {currentYear} All rights reserved
      </footer>
      <div class="fixed bottom-6 left-6 flex flex-col space-y-3 z-40">
        <a
          href="https://github.com/victorjosefcaro"
          target="_blank"
          rel="noopener noreferrer"
          class="bg-white dark:bg-gray-800 shadow-lg rounded-full w-12 h-12 flex items-center justify-center text-gray-500 dark:text-gray-300 hover:text-gray-800 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700 transition duration-300"
          aria-label="GitHub"
        >
          <i class="fab fa-github text-2xl"></i>
        </a>
        <a
          href="https://www.linkedin.com/in/victor-caro-a4906434a/"
          target="_blank"
          rel="noopener noreferrer"
          class="bg-white dark:bg-gray-800 shadow-lg rounded-full w-12 h-12 flex items-center justify-center text-gray-500 dark:text-gray-300 hover:text-gray-800 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700 transition duration-300"
          aria-label="LinkedIn"
        >
          <i class="fab fa-linkedin text-2xl"></i>
        </a>
      </div>
      <div class="fixed bottom-6 right-6 flex flex-col space-y-3 z-40">
        <button
          id="theme-toggle"
          type="button"
          class="bg-white dark:bg-gray-800 shadow-lg rounded-full w-12 h-12 flex items-center justify-center text-gray-500 dark:text-gray-300 hover:text-gray-800 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-700 transition duration-300"
          aria-label="Toggle Light/Dark Mode"
        >
          <i id="theme-toggle-icon" class="fas fa-moon text-2xl"></i>
        </button>
      </div>
    </div>
    <script is:inline>
      // Highlight nav link when section is in view
      const sections = ["about", "portfolio", "skills", "education", "contact"];
      const navLinks = sections.map((id) =>
        document.getElementById(`nav-${id}`),
      );

      function onScroll() {
        let found = false;
        for (let i = sections.length - 1; i >= 0; i--) {
          const section = document.getElementById(sections[i]);
          if (section) {
            const rect = section.getBoundingClientRect();
            if (rect.top <= 150) {
              navLinks.forEach((link) =>
                link.classList.remove("text-indigo-700", "font-bold"),
              );
              navLinks[i].classList.add("text-indigo-700", "font-bold");
              found = true;
              break;
            }
          }
        }
        if (!found) {
          navLinks.forEach((link) =>
            link.classList.remove("text-indigo-700", "font-bold"),
          );
        }
      }
      window.addEventListener("scroll", onScroll, { passive: true });
      window.addEventListener("DOMContentLoaded", onScroll);

      // Light/Dark mode toggle
      const themeToggle = document.getElementById("theme-toggle");
      const themeIcon = document.getElementById("theme-toggle-icon");
      const htmlEl = document.documentElement;

      function setTheme(dark) {
        if (dark) {
          htmlEl.classList.add("dark");
          themeIcon.classList.remove("fa-moon");
          themeIcon.classList.add("fa-sun");
        } else {
          htmlEl.classList.remove("dark");
          themeIcon.classList.remove("fa-sun");
          themeIcon.classList.add("fa-moon");
        }
      }

      // Initial theme: check localStorage or system preference
      const userTheme = localStorage.getItem("theme");
      const systemPrefersDark = window.matchMedia(
        "(prefers-color-scheme: dark)",
      ).matches;
      setTheme(userTheme === "dark" || (!userTheme && systemPrefersDark));

      themeToggle.addEventListener("click", () => {
        const isDark = htmlEl.classList.contains("dark");
        setTheme(!isDark);
        localStorage.setItem("theme", !isDark ? "dark" : "light");
      });
    </script>
  </body>
</html>

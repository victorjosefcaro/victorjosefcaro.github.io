---
// src/layouts/MainLayout.astro

// Import global styles if you created a separate CSS file (e.g., src/styles/global.css)
import "../styles/global.css";

// Define props if you want to pass data like title to the layout
export interface Props {
  title?: string; // Optional title prop
}

const { title = "victorjosefcaro" } = Astro.props; // Default title

// Get current year for the footer using JavaScript within Astro's frontmatter
const currentYear = new Date().getFullYear();

// NOTE: This layout assumes you have set up the Astro Tailwind integration.
// The Tailwind CDN script has been removed.
---

<!doctype html>
<html lang="en" class="min-h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />

    <style is:global>
      /* Paste custom styles from your style.css here, like scrollbar or .nav-link.active */
      /* Example: */
      html {
        scroll-behavior: smooth;
      }
      .nav-link.active {
        font-weight: 700;
        color: #1f2937; /* text-gray-800 */
      }

      ::-webkit-scrollbar {
        width: 6px;
      }
      ::-webkit-scrollbar-track {
        background: #f1f1f1; /* Light gray track */
      }
      ::-webkit-scrollbar-thumb {
        background: #888; /* Medium gray thumb */
        border-radius: 3px;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: #555; /* Darker gray thumb on hover */
      }

      /* Add other global styles from style.css */
    </style>
  </head>
  <body class="bg-gray-100 font-['Inter'] text-gray-700">
    <div class="flex flex-col md:flex-row min-h-screen">
      <aside
        class="w-full md:w-64 lg:w-72 bg-white p-6 md:p-8 shadow-lg md:h-screen flex flex-col items-center md:items-start text-center md:text-left sticky top-0"
        id="sidebar"
      >
        <div class="mb-8 flex flex-col items-center w-full">
          <h1 class="text-4xl font-bold text-gray-900 mb-4">Victor Caro</h1>
          <div class="flex space-x-3 justify-center md:justify-start">
            <a
              href="https://github.com/victorjosefcaro"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-500 hover:text-gray-800 transition duration-300"
            >
              <i class="fab fa-github text-xl"></i>
            </a>
            <a
              href="https://www.linkedin.com/in/victor-caro-a4906434a/"
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-500 hover:text-gray-800 transition duration-300"
            >
              <i class="fab fa-linkedin text-xl"></i>
            </a>
          </div>
        </div>

        <nav class="flex-grow w-full" id="main-nav">
          <ul class="space-y-3">
            <li>
              <a
                href="#about"
                class="nav-link text-gray-600 hover:text-gray-900 block py-1 transition duration-300"
                data-section="about">About</a
              >
            </li>
            <li>
              <a
                href="#portfolio"
                class="nav-link text-gray-600 hover:text-gray-900 block py-1 transition duration-300"
                data-section="portfolio">Portfolio</a
              >
            </li>
            <li>
              <a
                href="#skills"
                class="nav-link text-gray-600 hover:text-gray-900 block py-1 transition duration-300"
                data-section="skills">Skills</a
              >
            </li>
            <li>
              <a
                href="#certifications"
                class="nav-link text-gray-600 hover:text-gray-900 block py-1 transition duration-300"
                data-section="certifications">Certifications</a
              >
            </li>
            <li>
              <a
                href="#education"
                class="nav-link text-gray-600 hover:text-gray-900 block py-1 transition duration-300"
                data-section="education">Education</a
              >
            </li>
            <li>
              <a
                href="#contact"
                class="nav-link text-gray-600 hover:text-gray-900 block py-1 transition duration-300"
                data-section="contact">Contact</a
              >
            </li>
          </ul>
        </nav>

        <footer class="mt-auto pt-6 text-xs text-gray-400 text-center w-full">
          &copy; {currentYear} All rights reserved
        </footer>
      </aside>

      <main class="w-full md:flex-1 p-6 md:p-10 lg:p-12">
        <slot />
      </main>
    </div>
  </body>
</html>
